{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "test/*": ["test/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "presets": ["module:metro-react-native-babel-preset"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@components": "./src/components",
          "@utils": "./src/utils",
          "@services": "./src/services",
          "@hooks": "./src/hooks",
          "@constants": "./src/constants",
          "@screens": "./src/screens",
          "@navigations": "./src/navigations",
          "@types": "./src/types",
          "@config": "./src/config",
          "@styles": "./src/styles",
          "@context": "./src/context",
          "@redux": "./src/redux",
          "@sagas": "./src/sagas",
          "@api": "./src/api",
          "@models": "./src/models",
          "@validations": "./src/validations",
          "@assets": "./src/assets",
          "@assets/*": "./src/assets/*",
          "@assets/images": "./src/assets/images",
          "@assets/fonts": "./src/assets/fonts",
          "@assets/icons": "./src/assets/icons",
          "@assets/svgs": "./src/assets/svgs",
          "@assets/videos": "./src/assets/videos",
          "@assets/audios": "./src/assets/audios",
          "@assets/animations": "./src/assets/animations",
          "@assets/locales": "./src/assets/locales",
          "@assets/locales/*": "./src/assets/locales/*",
          "@assets/locales/en": "./src/assets/locales/en",
          "@assets/locales/vi": "./src/assets/locales/vi",
          "@assets/locales/ja": "./src/assets/locales/ja",
          "@assets/locales/ko": "./src/assets/locales/ko",
          "@assets/locales/zh": "./src/assets/locales/zh",
          "@assets/locales/fr": "./src/assets/locales/fr",
          "@assets/locales/de": "./src/assets/locales/de",
          "@assets/locales/es": "./src/assets/locales/es",
          "@assets/locales/it": "./src/assets/locales/it",
          "@assets/locales/pt": "./src/assets/locales/pt",
          "@assets/locales/ru": "./src/assets/locales/ru",
          "@assets/locales/ar": "./src/assets/locales/ar",
          "@assets/locales/th": "./src/assets/locales/th",
          "@assets/locales/fa": "./src/assets/locales/fa"
        }
      }
    ]
  ]
}
